<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% unless user.persisted? # new page %>
    <%= hidden_field :course, :id, value: params[:course_id] %>
  <% end %>

  <% if user.persisted? # edit page %>
  <div class="field">
    <%= form.label :id_number, "學號" %>
    <%= user.id_number %>
  </div>
  <% end %>

  <div class="field">
    <%= form.label :last_name, "姓" %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :first_name, "名" %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :sex, "性別" %>
    <%= form.select :sex, ['男', '女']%>
  </div>

  <div class="field">
    <%= form.label :cellphone_number, "手機號碼" %>
    <%= form.text_field :cellphone_number %>
  </div>

  <div class="field">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :utype, "身份" %>
    <%= form.select :utype, ['在家', '僧眾']%>
  </div>

  <div class="field">
    <%= form.label :line_account, "Line帳號" %>
    <%= form.text_field :line_account %>
  </div>

  <div class="field">
    <%= form.label :line_name, "Line暱稱" %>
    <%= form.text_field :line_name %>
  </div>

  <div class="field">
    <%= form.label :buddhism_exp %>
    <%= form.text_area :buddhism_exp %>
  </div>

  <div class="field">
    <%= form.label :skills %>
    <%= form.text_area :skills %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
