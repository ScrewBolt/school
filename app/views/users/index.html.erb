<p id="notice"><%= notice %></p>

<h1>學員</h1>

<table>
  <thead>
    <tr>
      <th>學號</th>
      <th>姓名</th>
      <th>性別</th>
      <th>手機號碼</th>
      <th>Email</th>
      <th>身份</th>
      <th>Line帳號</th>
      <th>Line暱稱</th>
      <th colspan="3">控制</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id_number %></td>
        <td><%= user.last_name %><%= user.first_name %></td>
        <td><%= user.sex %></td>
        <td><%= user.cellphone_number %></td>
        <td><%= user.email %></td>
        <td><%= user.utype %></td>
        <td><%= user.line_account %></td>
        <td><%= user.line_name %></td>
        <td><%= link_to '顯示', user %></td>
        <td><%= link_to '編輯', edit_user_path(user) %></td>
        <td><%= link_to '刪除', user, method: :delete, data: { confirm: '確定要刪除嗎?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

